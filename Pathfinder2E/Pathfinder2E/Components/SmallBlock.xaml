<UserControl x:Class="Pathfinder2E.MicroModels.SmallBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pathfinder2E.MicroModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5">
        <StackPanel Width="80" Background="White" VerticalAlignment="Center">
            <Label Background="White" Content="{Binding Type}" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5,5,5,0"></Label>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Height="10" Width="10" Margin="5,0,5,0"/>
                <Label  VerticalAlignment="Center" Width="45" Content="{Binding PlusValue}" HorizontalContentAlignment="Center" FontWeight="Bold"  ScrollViewer.CanContentScroll="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
