<UserControl x:Class="Pathfinder2E.Shell.Components.TabBio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pathfinder2E.Shell.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:vm="clr-namespace:Pathfinder2E.Shell.ViewModels"
             d:DataContext="{d:DesignInstance vm:MainViewModel}">
    <Grid>
        <DockPanel LastChildFill="False">
            <StackPanel Margin="20">
                <Label Content="Био"/>
                <TextBox Text="{Binding model.BIO}" Height="600" Width="400" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True"/>
            </StackPanel>
            <StackPanel Margin="20">
                <Label Content="Заметки"/>
                <TextBox Text="{Binding model.Notes}" Width="400" Height="600" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
