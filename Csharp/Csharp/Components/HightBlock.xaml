<UserControl x:Class="Csharp.Components.HighBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Csharp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel Width="85"  >
            <TextBox Height="77" Width="85" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                     Text="{Binding Value}" FontSize="24" FontWeight="Bold"/>
            <Label Background="White" 
                   Content="{Binding Type}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            </Label>
        </StackPanel>
    </Grid>
</UserControl>
